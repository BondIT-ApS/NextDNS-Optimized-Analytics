# Environment variables for migrate-to-new-db.sh
# Copy this file to .env.migration and fill in your actual values
# Then run: source .env.migration && ./migrate-to-new-db.sh

# Source Database (where data is migrated FROM)
export SOURCE_DB_HOST="localhost"           # Source database host
export SOURCE_DB_PORT="5003"                # Source database port
export SOURCE_DB_USER="nextdns_user"        # Source database user
export SOURCE_DB_NAME="nextdns"             # Source database name
export SOURCE_DB_PASSWORD="your-password-here"  # REQUIRED: Source database password

# Target Database (where data is migrated TO)
export TARGET_DB_HOST="your-target-host.db.example.com" # REQUIRED: Target database host
export TARGET_DB_PORT="25060"                           # Target database port (default: 5432)
export TARGET_DB_USER="your-target-user"                # REQUIRED: Target database user
export TARGET_DB_NAME="your-target-db"                  # REQUIRED: Target database name
export TARGET_DB_PASSWORD="your-password-here"          # REQUIRED: Target database password
